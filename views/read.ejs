<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 py-10 px-10">
        <a class="text-blue-300" href="/">Back Home</a>
        <h1 class="text-3xl text-white mt-8 mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-4">
            <% users.forEach(function(user) { %>
                <div class="user w-72 p-4 bg-zinc-700 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-red-400 overflow-hidden">
                        <img src="<%= user.image %>" alt="User Image" class="w-full h-full object-cover">
                    </div>
                    <h3 class="text-xl text-white mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-400"><%= user.email %></h5>
                    <div class="flex gap-3 mt-8">
                        <a class="text-zinc-400" href="/edit/<%= user._id %>" >Edit User</a>
                        <a class="text-red-400" href="/delete/<%= user._id %>" >Delete User</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
